@page
@model SRG_lab2_Shumeiko.Pages_TaskExecutors.CreateModel

        @{
        ViewData["Title"] = "Створити новий зв'язок";
        }

<h1>Створити новий зв'язок</h1>
        
    <h4>Виконавці завдань</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskExecutor.TaskID" class="control-label"></label>
                <select asp-for="TaskExecutor.TaskID" class ="form-control" asp-items="ViewBag.TaskID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaskExecutor.MemberID" class="control-label"></label>
                <select asp-for="TaskExecutor.MemberID" class ="form-control" asp-items="ViewBag.MemberID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
