@page
@model SRG_lab2_Shumeiko.Pages_Tasks.CreateModel

        @{
        ViewData["Title"] = "Створити завдання";
        }
        
        <h1>Створити</h1>
        
    <h4>Завдання</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task.ManagerID" class="control-label"></label>
                <select asp-for="Task.ManagerID" class ="form-control" asp-items="ViewBag.ManagerID"></select>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Task.Title" class="control-label"></label>
                <input asp-for="Task.Title" class="form-control" />
                <span asp-validation-for="Task.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Task.CreationDate" class="control-label"></label>
                <input asp-for="Task.CreationDate" class="form-control" />
                <span asp-validation-for="Task.CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Deadline" class="control-label"></label>
                <input asp-for="Task.Deadline" class="form-control" />
                <span asp-validation-for="Task.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Task.Status" class="control-label"></label>
                <input asp-for="Task.Status" class="form-control" />
                <span asp-validation-for="Task.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
