@page
@model SRG_lab2_Shumeiko.Pages_Departments.EditModel

@{
    ViewData["Title"] = "Редагувати департамент";
}

<h1>Редагувати</h1>

<h4>Департамент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Department.DepartmentID" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Department.ContactEmail" class="control-label"></label>
                <input asp-for="Department.ContactEmail" class="form-control" />
                <span asp-validation-for="Department.ContactEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Department.CreatedDate" class="control-label"></label>
                <input asp-for="Department.CreatedDate" class="form-control" />
                <span asp-validation-for="Department.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
