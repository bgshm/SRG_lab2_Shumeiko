@page
@model SRG_lab2_Shumeiko.Pages_Members.IndexModel

@{
    ViewData["Title"] = "Учасники";
}

<h1>Учасники</h1>

<p>
    <a asp-page="Create">Створити нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].MemberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].TasksPerMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].TasksTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].LastTaskDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].EnrollmentYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].StructuralUnit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Member) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TasksPerMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TasksTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastTaskDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StructuralUnit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MemberID">Редагувати</a> |
                    <a asp-page="./Delete" asp-route-id="@item.MemberID">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
